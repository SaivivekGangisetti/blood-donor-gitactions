package com.klef.dev.model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

/**
 * Donor entity representing the "donor" table in the database.
 * Fully aligned with current MySQL schema (no foreign key references).
 */
@Entity
@Table(name = "donor")
public class Donor {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int id;

    private String address;
    private int age;
    private String contact_no;
    private String email;
    private String name;
    private String blood_group;

    // ðŸ”¹ Default constructor (required by JPA)
    public Donor() {}

    // ðŸ”¹ Parameterized constructor
    public Donor(String address, int age, String contact_no, String email, String name, String blood_group) {
        this.address = address;
        this.age = age;
        this.contact_no = contact_no;
        this.email = email;
        this.name = name;
        this.blood_group = blood_group;
    }

    // ðŸ”¹ Getters and Setters
    public int getId() { return id; }
    public void setId(int id) { this.id = id; }

    public String getAddress() { return address; }
    public void setAddress(String address) { this.address = address; }

    public int getAge() { return age; }
    public void setAge(int age) { this.age = age; }

    public String getContact_no() { return contact_no; }
    public void setContact_no(String contact_no) { this.contact_no = contact_no; }

    public String getEmail() { return email; }
    public void setEmail(String email) { this.email = email; }

    public String getName() { return name; }
    public void setName(String name) { this.name = name; }

    public String getBlood_group() { return blood_group; }
    public void setBlood_group(String blood_group) { this.blood_group = blood_group; }