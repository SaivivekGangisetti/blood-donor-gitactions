package com.klef.dev.model;

import jakarta.persistence.*;
import java.util.Objects;

@Entity
@Table(name = "blood_group")
public class BloodGroup {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable=false, unique=true)
    private String groupName; // e.g. "A+", "O-"

    public BloodGroup() {}

    public BloodGroup(String groupName) { this.groupName = groupName; }

    public Long getId() { return id; }
    public void setId(Long id) { this.id = id; }

    public String getGroupName() { return groupName; }
    public void setGroupName(String groupName) { this.groupName = groupName; }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (!(o instanceof BloodGroup)) return false;
        BloodGroup bg = (BloodGroup) o;
        return Objects.equals(id, bg.id);
    }

    @Override
    public int hashCode() { return Objects.hash(id); }
}
